@model AutoScout.Models.VehicleImage
@{
    ViewBag.Title = "AddVehiclePhoto";
}

<h2>AddVehiclePhoto</h2>

@using (Html.BeginForm("AddVehiclePhoto","Vehicles", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Upload Photo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <label>Photo</label>
                <input type="file" id="imageFile" name="imageFile" />
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" /> 
            </div>
        </div>
    </div>
}